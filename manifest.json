{
    "name": "Open in Sci-hub",
    "version": "1.0",
    "description": "Open Research Papers in Sci-Hub",
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/scihub16.png",
            "32": "images/scihub32.png",
            "48": "images/scihub48.png",
            "128": "images/scihub128.png"
        }
    },
    "icons": {
        "16": "images/scihub16.png",
        "32": "images/scihub32.png",
        "48": "images/scihub48.png",
        "128": "images/scihub128.png"
    },
    "manifest_version": 2
}